{
  "name": "fluent-grow",
  "version": "0.1",
  "description": "Zero-runtime CSS-in-TS framework leveraging Web Components and Houdini worklets",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:ultra": "tsc && vite build --mode production",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "docs": "typedoc --options typedoc.config.ts",
    "coverage": "c8 --check-coverage --branches 59 --lines 56 --functions 39 --reporter=lcov --reporter=text-summary node --test tests/unit/**/*.test.js"
  },
  "keywords": [
    "web-components",
    "css-in-js",
    "houdini",
    "design-system",
    "typescript",
    "zero-runtime",
    "progressive-enhancement",
    "browser-compatibility",
    "performance-monitoring"
  ],
  "sideEffects": false,
  "author": "Fluent Grow Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "Firefox ESR",
    "not ie <= 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-legacy": "^7.2.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "lightningcss": "^1.30.2",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
